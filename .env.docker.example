# Docker Environment Configuration
# Copy this to .env.docker and fill in the values

# Node Environment
NODE_ENV=production
PORT=3000

# Database
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_PORT=27017

# Redis
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# JWT
JWT_SECRET=your-secret-key-change-this
JWT_EXPIRES_IN=7d

# Brevo (Email Service)
BREVO_API_KEY=your-brevo-api-key
FROM_EMAIL=noreply@roomlink.com

# Cloudinary (File Upload)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_BUSINESS_CODE=your-code
MPESA_PASSKEY=your-passkey
MPESA_CALLBACK_URL=https://yourdomain.com/api/payments/callback
MPESA_INITIATOR_NAME=your-initiator-name
MPESA_SECURITY_CREDENTIAL=your-security-credential
MPESA_TIMEOUT_URL=https://yourdomain.com/api/payments/timeout
MPESA_RESULT_URL=https://yourdomain.com/api/payments/result

# Frontend URL
FRONTEND_URL=http://localhost:3001
